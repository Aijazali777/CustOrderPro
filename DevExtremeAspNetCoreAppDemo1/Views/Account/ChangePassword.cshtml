@inject UserManager<Customer> userManager
@model ChangePassword

@{
    var user = await userManager.GetUserAsync(User);
    ViewData["Title"] = "ChangePassword";
}

<div class="dx-viewport" style="margin: 0px; height:886px">
    <div class="container">
        <div class="row justify-content-center">
            <div class="group-items col-4 mt-5">
                <h3 class="text-center mb-4">Change Password</h3>
                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="form-group">
                        <label>Current Password</label>
                        <input asp-for="CurrentPassword" class="form-control" style="background-color:#2d2d2d; height:30px"/>
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>New Password</label>
                        <input asp-for="NewPassword" class="form-control" style="background-color:#2d2d2d; height:30px"/>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" style="background-color:#2d2d2d; height:30px" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-info">Change Password</button>
                </form>
            </div>
        </div>
    </div>
</div>
